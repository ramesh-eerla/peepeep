<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dim_5"
        android:background="@drawable/coupans_background"
        android:elevation="@dimen/dim_6"
        android:padding="@dimen/dim_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_10">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get 5"
                android:id="@+id/coupan_value"
                android:fontFamily="@font/avenir"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/login_font_size"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:fontFamily="@font/avenir"
                android:id="@+id/coupa_use"
                android:text="Use This"
                android:textColor="@color/coupanyellow"
                android:textSize="@dimen/login_font_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dim_5"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_10"
                        android:fontFamily="@font/avenir"
                        android:textAllCaps="false"
                        android:text="Use GET5 Code to get 5% discount for your ride"
                        android:id="@+id/coupan_content"
                        android:textColor="@color/item_text_color"
                        android:textSize="@dimen/screen_title"
                        />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dim_5"
                    android:layout_height="@dimen/dim_8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_10"
                        android:text="Valid Till : 22/10/2019"
                        android:id="@+id/coupan_valid"
                        android:textColor="@color/item_text_color"
                        android:textSize="@dimen/screen_title"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>