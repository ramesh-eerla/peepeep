<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:layout_editor_absoluteY="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />


        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.00">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">

            <com.peepeep.transport.uicomponents.PpEditText
                android:id="@+id/user_fname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextboxheight"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_weight="1"
                android:background="@drawable/selet_edittext"
                android:drawableStart="@drawable/ic_profile_round"
                android:drawablePadding="@dimen/dim_15"
                android:fontFamily="@font/califi"
                android:hint="First Name"
                android:visibility="visible"
                android:inputType="text"
                android:paddingLeft="@dimen/dim_10"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/regularfont" />
                <com.peepeep.transport.uicomponents.PpEditText
                    android:id="@+id/user_lname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittextboxheight"
                    android:layout_marginLeft="@dimen/dim_5"
                    android:layout_weight="1"
                    android:background="@drawable/selet_edittext"
                    android:fontFamily="@font/califi"
                    android:hint="Last Name"
                    android:visibility="visible"
                    android:inputType="text"
                    android:paddingLeft="@dimen/dim_15"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/regularfont" />

            </LinearLayout>
            <com.peepeep.transport.uicomponents.PpEditText
                android:id="@+id/phone_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextboxheight"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_marginTop="@dimen/dim_7"
                android:background="@drawable/selet_edittext"
                android:drawableStart="@drawable/ic_num_phone"
                android:drawablePadding="@dimen/dim_15"
                android:fontFamily="@font/califi"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingLeft="@dimen/dim_10"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/regularfont" />


            <com.peepeep.transport.uicomponents.PpEditText
                android:id="@+id/email_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextboxheight"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_marginTop="@dimen/dim_7"
                android:background="@drawable/selet_edittext"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="@dimen/dim_15"
                android:fontFamily="@font/califi"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/dim_10"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/regularfont" />


            <com.peepeep.transport.uicomponents.PpEditText
                android:id="@+id/pwd_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextboxheight"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_marginTop="@dimen/dim_7"
                android:background="@drawable/selet_edittext"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="@dimen/dim_15"
                android:fontFamily="@font/califi"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dim_10"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/regularfont" />


            <com.peepeep.transport.uicomponents.PpEditText
                android:id="@+id/cnfpwd_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextboxheight"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_marginTop="@dimen/dim_7"
                android:background="@drawable/selet_edittext"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="@dimen/dim_15"
                android:fontFamily="@font/califi"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dim_10"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/regularfont" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="@dimen/dim_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/califi"
                    android:text="@string/forbussiness"
                    android:textSize="@dimen/screen_title" />

                <ToggleButton
                    android:id="@+id/business_toggle"
                    android:padding="@dimen/dim_5"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:layout_width="@dimen/dim_65"
                    android:layout_height="@dimen/dim_28"
                    android:background="@drawable/toggleonoff_selector"
                    android:gravity="center"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
            <com.peepeep.transport.uicomponents.PpEditText
                android:id="@+id/orgname_edit"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextboxheight"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_marginTop="@dimen/dim_7"
                android:background="@drawable/selet_edittext"
                android:fontFamily="@font/califi"
                android:hint="@string/business_name"
                android:inputType="text"
                android:paddingLeft="@dimen/dim_15"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/regularfont" />
            <com.peepeep.transport.uicomponents.PpEditText
            android:id="@+id/gst_edit"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittextboxheight"
            android:layout_marginLeft="@dimen/dim_5"
            android:layout_marginTop="@dimen/dim_7"
            android:background="@drawable/selet_edittext"
            android:fontFamily="@font/califi"
            android:hint="@string/gst"
            android:inputType="text"
            android:paddingLeft="@dimen/dim_15"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/regularfont" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/termscheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_60"
                    android:layout_gravity="center"
                    android:text="@string/acceptterms" />

                <TextView
                    android:id="@+id/checkboxtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dim_5"
                    android:text="@string/terms" />
            </LinearLayout>

            <com.peepeep.transport.uicomponents.PpButton
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/topgradient"
                android:fontFamily="@font/califi"
                android:text="@string/register"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/action_titile"

                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>
