<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acitivities.ResetPasswordActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dim_10"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".acitivities.ResetPasswordActivity"
        tools:showIn="@layout/activity_reset_password">

        <com.peepeep.transport.uicomponents.PpEditText
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60"
            android:background="@drawable/selet_edittext"
            android:gravity="center"
            android:hint="Enter Registerd Mobile/Email" />

        <LinearLayout
            android:id="@+id/rest_pwd_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.peepeep.transport.uicomponents.PpEditText
                android:id="@+id/new_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_60"
                android:background="@drawable/selet_edittext"
                android:gravity="center"
                android:hint="New Password" />

            <com.peepeep.transport.uicomponents.PpEditText
                android:id="@+id/re_enter_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_60"
                android:layout_marginTop="@dimen/dim_5"
                android:background="@drawable/selet_edittext"
                android:gravity="center"
                android:hint="Re-Enter New Password" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/digi_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/califi"
                android:text="@string/digi_5"
                android:textSize="@dimen/screen_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_5">

                <EditText
                    android:id="@+id/dig_1"
                    android:layout_width="@dimen/dim_60"
                    android:layout_height="@dimen/dim_60"
                    android:layout_margin="@dimen/dim_6"
                    android:background="@drawable/selet_edittext"
                    android:gravity="center"
                    android:hint="1" />

                <EditText
                    android:id="@+id/dig_2"
                    android:layout_width="@dimen/dim_60"
                    android:layout_height="@dimen/dim_60"
                    android:layout_margin="@dimen/dim_6"
                    android:background="@drawable/selet_edittext"
                    android:gravity="center"
                    android:hint="2" />

                <EditText
                    android:id="@+id/dig_3"
                    android:layout_width="@dimen/dim_60"
                    android:layout_height="@dimen/dim_60"
                    android:layout_margin="@dimen/dim_6"
                    android:background="@drawable/selet_edittext"
                    android:gravity="center"
                    android:hint="3" />

                <EditText
                    android:id="@+id/dig_4"
                    android:layout_width="@dimen/dim_60"
                    android:layout_height="@dimen/dim_60"
                    android:layout_margin="@dimen/dim_6"
                    android:background="@drawable/selet_edittext"
                    android:gravity="center"
                    android:hint="4" />

                <EditText
                    android:id="@+id/dig_5"
                    android:layout_width="@dimen/dim_60"
                    android:layout_height="@dimen/dim_60"
                    android:layout_margin="@dimen/dim_6"
                    android:background="@drawable/selet_edittext"
                    android:gravity="center"
                    android:hint="5" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@drawable/topgradient"
            android:fontFamily="@font/califi"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/action_titile"

            android:textStyle="bold" />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>